<html>
<head>
    <title>
        Contacts DB
    </title>
    <link rel="stylesheet" href="/assets/home.css">
</head>
<body>
    <div class="container">

        <div class="options">
            <button value="Add Contact" id="AddContact" onclick="showForm()">Add Contact</button>
        </div>
        <div class="contact-form">
        <div class="form-popup" id="myForm">

            <form action="/create-contact" class="form-container" method="POST">
              <h1>Add Contact</h1>
          
              <label for="name"><b>Name</b></label>
              <input type="text" placeholder="Enter Name" name="name" required>
          
              <label for="number"><b>Number</b></label>
              <input type="Number" placeholder="Enter Number" name="number" required>
          
              <button type="submit" class="btn" id="Save">Save Contact</button>
              <button type="button" class="btn cancel" onclick="closeForm()">X</button>
            </form>
          </div>
          </div>
          <div class="list">

          
        <%for(var contact of contacts){%>
        <div class="contact">
                <div class="info">
                <div class="name"><%=contact.name%></div>
                <div class="name"><%=contact.number%></div>
                </div>
                <div class="options">
                    <button value="delete" style="font-size: 1.3em;"> <a href="/delete-contact/<%=contact.id%>">Delete</a> </button>
                    <button class="edit" style="font-size: 1.3em;" formId="<%=contact.id%>" name="<%=contact.name%>" number="<%=contact.number%>">Edit</button>
                </div>
                
        </div>  
        <div class="contact-form">
        <div class="form-popup" id="<%=contact.id%>">
            <<form action="/update-contact/<%=contact.id%>" class="form-container" method="POST">
                <h1>Add Contact</h1>
            
                <label for="name"><b>Name</b></label>
                <input type="text" placeholder="Enter Name" name="name" required>
            
                <label for="number"><b>Number</b></label>
                <input type="Number" placeholder="Enter Number" name="number" required>
            
                <button type="submit" class="btn" >Save Contact</button>
                <button type="button" class="btn cancel" formId="<%=contact.id%>" >X</button>
              </form>
            </div>  
        </div>
        <%}%>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/assets/home.js"></script>
</body>
</html>